<h1>Sign Up</h1>

<!-- if we don't do this and submit a form with no password, it rollbacks the transaction, we won't know about it -->
<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    <div class='field'>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>
    <div class='field'>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>
    <div class='field'>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit 'Sign Up' %>
<% end %>